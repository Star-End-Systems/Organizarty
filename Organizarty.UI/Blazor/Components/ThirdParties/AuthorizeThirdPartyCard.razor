@using Organizarty.Application.App.ThirdParties.Entities;

<div class="flex flex-col justify-center border-[5px] border-solid border-[#C6C6C6] rounded-2xl w-2/5">
    <div class="flex justify-around py-5">
        <img src="/images/Manager/ThirdParties/Logo.png" class="h-full w-2/5">
        <div class="flex flex-col h-full w-2/5 font-[Inter]">
            <h2 class="font-bold text-[#C6C6C6] text-md xl:text-lg 2xl:text-xl">
                Username:
            </h2>
            <p class="text-[#424242]">@ThirdParty.Name</p>
            <div class="border-[3px] border-solid border-[#FFC700] rounded-xl h-4/5 w-full p-2 mt-2">
                <h2 class="text-[#C6C6C6] text-md xl:text-lg 2xl:text-xl font-[KonnectBold]">
                    Descrição:
                </h2>
                <p class="text-[#424242] font-[Konnect] words-break text-xs xl:text-sm 2xl:text-md">@ThirdParty.Description</p>
            </div>
        </div>
    </div>
    <a href="/Manager/ThirdParties/Info/@ThirdParty.Id" class="self-center">
        <svg width="86" height="42" viewBox="0 0 86 42" fill="none" xmlns="http://www.w3.org/2000/svg" class="self-center">
            <path d="M5 5L43.5 35.5L81 5" stroke="#C6C6C6" stroke-width="10" stroke-linecap="round"/>
        </svg>
    </a>
    <div class="flex justify-around p-3 w-full mt-3 text-white font-[KonnectBold]">
        <a href="/Manager/ThirdParties/Authorize/@ThirdParty.Id" class="bg-[#2AD861] px-20 py-2 rounded-2xl">Aceitar</a>
        <a href="/Manager/ThirdParties/Refuse/@ThirdParty.Id" class="bg-[#E05252] px-20 py-2 rounded-2xl">Recusar</a>
    </div>
</div>

@code{
  [Parameter]
  public ThirdParty ThirdParty { get; set; } = new();
}
