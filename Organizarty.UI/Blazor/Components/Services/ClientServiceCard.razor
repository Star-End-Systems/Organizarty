@using Organizarty.Application.App.Services.Entities;

<div class="flex">
    <div class="w-52 h-60 flex-col mr-16 mb-10 rounded">
        <div class="Image w-full h-3/4 flex rounded">
            <img src="@Service.Images[0]" class="Image w-52"/>
            <div class="flex flex-col justify-end ml-2 mb-2">
                <p class="z-10 font-[KonnectBold] text-white">R$ @Service.Price</p>
                <p class="z-10 font-[KonnectBold] text-white">@Service.Plan</p>
            </div>
        </div>
    <a href="/Clients/Services/Details/@Service.Id">
      <button class="w-full mt-5 h-10 bg-[#484343] font-[Inter] font-bold text-white rounded-xl">
        Detalhes
      </button>
    </a>
  </div>
</div> 

@code{
  [Parameter]
  public ServiceInfo Service { get; set; } = default!;
}