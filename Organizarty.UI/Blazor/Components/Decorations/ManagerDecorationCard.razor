@using Organizarty.Application.App.DecorationInfos.Entities;




<div class="flex">
  <div class="w-52 h-60 flex-col mr-16 mb-10 rounded">
    <div class="Text w-full h-3/4 flex rounded">
      <img src="@ImgURL" class="Image absolute w-52" />
      <div class="flex flex-col justify-end ml-2 mb-2">
        <p class="z-10 font-[KonnectBold] text-white">R$ @Decoration.Price</p>
      </div>
    </div>
    <a href="/Manager/Decorations/EditItem/@Decoration.Id"><button
        class="w-full mt-12 h-10 bg-[#484343] font-[Inter] font-bold text-white rounded-xl">Detalhes</button></a>
  </div>
</div>

@code{
  [Parameter]
  public DecorationInfo Decoration { get; set; } = default!;

  [Parameter]
  public string ImgURL {get; set;} = "/images/ThirdParty/MyServices/Fotografia.png";
}