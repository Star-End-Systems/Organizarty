@page
@{
    ViewData["title"] = "Comece a vender";
    Layout = "_NullLayout";
}

<section class="flex flex-col h-screen w-screen font-[Inter] bg-[url('/images/register/BackgroundThirdParty.png')] -z-50">
    <div class="flex flex-col top-0 items-center">
        <h1 class="text-[#B1B0B0] font-bold uppercase text-4xl xl:text-5xl 2xl:text-6xl">
            Registro
        </h1>
        <p class="text-[#908D8D] text-sm xl:text-md 2xl:text-lg">
            Precisamos somente de algumas informações para dar play na sua festa.
        </p>
    </div>
    <div class="flex text-[#948F8F] text-sm xl:text-md 2xl:text-lg h-3/4 justify-center">
        <img src="/images/register/LogoThirdParty.svg" class="h-1/2 bg-white py-10 px-20 self-center rounded-2xl border border-solid border-[#BB00C7] shadow-2xl mr-10"/>
        <div class="flex flex-col h-full w-1/3 justify-evenly">
            <div class="flex w-full h-[4rem] rounded-[1.5rem] shadow-xl px-5 items-center bg-white">
                <img src="/images/register/IconNome.svg"/>
                <input class="ml-3 w-full" aria-required="true" placeholder="Digite seu nome e sobrenome"/>
            </div>
            <div class="flex h-[4rem] w-full">
                <div class="flex w-10/12 h-[4rem] rounded-[1.5rem] shadow-xl px-5 items-center bg-white">
                    <img src="/images/register/IconLoja.svg"/>
                    <input class="ml-3 break-words w-full h-fit" aria-required="true" placeholder="Digite o nome de sua loja e selecione a localização"/>
                </div>
                <img src="/images/register/IconGPS.svg" class="rounded-[1.5rem] shadow-xl w-2/12 ml-[2%] bg-white">
            </div>
            <div class="flex w-full h-[4rem] rounded-[1.5rem] shadow-xl px-5 items-center bg-white">
                <img src="/images/register/IconCNPJ.svg"/>
                <input class="ml-3 w-full" aria-required="true" placeholder="Digite o CNPJ do lugar"/>
            </div>
            <div class="flex w-full h-[4rem] rounded-[1.5rem] shadow-xl px-5 items-center bg-white">
                <img src="/images/register/IconTelefone.svg"/>
                <input class="ml-3 w-full" aria-required="true" placeholder="Digite seu telefone ou celular"/>
            </div>
        </div>
    </div>
</section>