@page
@model LoginModel
@{
  Layout = "_NullLayout";
  ViewData["Title"] = "Login" ;
}
<section class="flex h-screen">
    <div class="w-5/12 h-screen py-8 flex-col">
        <div class="flex justify-center">
            <img class="w-32" src="/images/login/OrganizartyLogo.svg"/> 
        </div>
        <div class="LoginForm flex justify-center py-8 text-center">
            <form id="login" method="post" class="w-full">
                <h2>LOGIN</h2>
                    <div class="line pb-8 flex justify-center rounded-full"></div>
                        <div asp-validation-summary="ModelOnly" class=""></div>
                            <div class="h-48 items-stretch">
                                <!-- Email -->
                                    <input asp-for="Input.Email" class="w-9/12 h-12 rounded-xl shadow-md placeholder form-control" aria-required="true" placeholder="Digite seu email"/>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                <!-- Password -->
                                    <input asp-for="Input.Password" class="w-9/12 h-12 rounded-xl shadow-md form-control" autocomplete="current-password" aria-required="true" placeholder="Digite sua senha" type="password"/>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="flex w-full place-content-evenly">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Sign in</button>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Criar uma conta</button>
                            </div>
            </form>
        </div>
    </div>
    <div class="part2 w-7/12 h-screen">
        <img class="w-full h-full" src="/images/login/Vitrine.svg">  
    </div>
</section>