@page
@model LoginModel
@{
  Layout = "_NullLayout";
  ViewData["Title"] = "Login" ;
}
<section class="flex h-screen">
    <div class="w-5/12 h-screen py-8 flex-col items-center">
        <img class="w-32" src="/images/login/OrganizartyLogo.svg"/> 
            <form id="login" method="post">
                <h2>Login</h2>
                <hr />
                    <div asp-validation-summary="ModelOnly" class=""></div>
                        <div class="form-floating mb-3">
                            <label asp-for="Input.Email" class="form-label">Title</label>
                            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Some Title" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <label asp-for="Input.Password" class="form-label">Body</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Body" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Sign in</button>
                        </div>
            </form>
    </div>
    <div class="part2 w-7/12 h-screen">
        <img class="w-full h-full" src="/images/login/Vitrine.svg">  
    </div>
</section>