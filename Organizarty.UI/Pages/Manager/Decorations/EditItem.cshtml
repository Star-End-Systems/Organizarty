@page "{decorationId:Guid}"
@model EditDecorationItemModel

@{
    ViewData["Title"] = "New Service";
}

<section class="flex h-screen bg-[url('/images/Manager/ChooseNewDecorationType/forms-background.png')] bg-cover">
  <div class="part1 w-full h-screen py-8 flex-col">
    <div class="LoginForm flex justify-center py-8 text-center w-full">
      <form id="login" method="post" class="w-1/2">
    <h2 class="text-[#B1B0B0] uppercase font-[Inter] font-bold text-lg xs:text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl mt-8 text-white font-[KonnectBold]">Detalhes finais</h2>
           <div asp-validation-summary="ModelOnly" class=""></div>
           <div class="relative mb-8 mt-12">
              <input  asp-for="Input.Color" type="text" id="floating_outlined" class="text-white font-[KonnectBold] block px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 bg-transparent rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " />
              <label for="floating_outlined" class="absolute text-sm text-white font-bold  dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-[#FFB800] rounded  px-2 peer-focus:px-2 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1">Cor</label>
          </div>

           <div class="relative">
              <input  asp-for="Input.Price" type="text" id="floating_outlined" class="text-white font-[KonnectBold] block px-2.5 pb-2.5 pt-4 w-full text-sm text-gray-900 bg-transparent rounded-lg border-1 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " />
              <label for="floating_outlined" class="absolute text-sm text-white font-bold  dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-[#FFB800] rounded  px-2 peer-focus:px-2 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1">Pre√ßo</label>
          </div>
      
          <div class="flex items-start mb-5">
            <div class="flex items-center h-5 mt-6">
              <input id="terms" type="checkbox" value="" asp-for="Input.IsAvaible"
                class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800"
                required>
            </div>
            <label for="terms" class="ms-2 text-sm font-medium text-white mt-6">Disponibilidade</label>
          </div>
          <button type="submit"
            class="text-white bg-[#FFB800] hover:shadow-black border border-solid border-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Adicionar detalhes</button>
      </form>
    </div>
  </div>
</section>
