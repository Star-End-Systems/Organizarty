@page
@model IndexModel
@using Organizarty.UI.Blazor.Components.Decorations;

@{
    ViewData["title"] = "Minhas Decorações";
    Layout = "_NullLayout";
}

<partial name="_OrganizartyManagerLayout"/>

<section class="ml-auto w-5/6 overflow-x-hidden">
    <div clas="flex flex-col overflow-x-hidden">
        <div class="overflow-x-hidden">
            <h1 class="font-[Inter] font-bold text-[#848484] text-3xl ml-20 mt-10">Suas Decorações</h1>
        </div>
        <div class="flex ml-20 mt-4 overflow-x-hidden">
            <a href="/Manager/Decorations/ChooseNewDecorationType"><div class="w-fit flex flex-col items-center Button font-[KonnectBold] text-[#908D8D] mr-4"><button class="flex menuButtons rounded-full w-28 h-28  hover:bg-[#D9D9D9]"><img class="w-10 self-center ml-auto mr-auto" src="/images/ThirdParty/MyProducts/cruz.png"></img></button><h4 class="text-sm">Adicionar</h4></div></a>
        </div>
        <div class="ml-20 overflow-x-hidden">
              @foreach (var decoration in @Model.Decorations){
                <div class="mt-6 overflow-x-hidden">
                    <h1 class="flex font-[KonnectBold] text-[#A09898] text-4xl mb-2">@decoration.Name <a href="/Manager/Decorations/NewItem/@decoration.Id">+</a></h1>
                </div>
                <div class="flex overflow-x-auto">
                    @foreach (var item in decoration.Decorations){
                      <component type="typeof(ManagerDecorationCard)" render-mode="ServerPrerendered" param-Decoration="@item" param-ImgURL="decoration.ObjectURL" />
                  }
                </div>
              }
        </div>
    </div>
</section>
