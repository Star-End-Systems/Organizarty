@page
@model CreateAccountModel
@{
Layout = "_NullLayout";
ViewData["Title"] = "Register" ;
}
<section class="flex h-screen font-[Inter] bg-[url('/images/Clients/Accounts/BackgroundUser.png')]">
  <div class="w-screen h-full flex flex-col items-center">
    <h2 class="text-[#B1B0B0] uppercase font-[Inter] font-bold text-lg xs:text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl mt-5">Register</h2>
    <p class="text-[#908D8D] font-[Inter] text-xs md:text-xs lg:text-sm xl:text-md 2xl:text-lg mt-2 mb-10">Precisamos somente de algumas informações para dar play na sua festa.</p>
    <div class="flex w-screen justify-center h-full">
      <div class="flex justify-end w-2/5 h-1/2 self-center pr-10">
        <img class="w-3/5 border-2 border-solid border-[#FF008A] rounded-2xl shadow-2xl bg-white px-10 py-5" src="/images/Clients/Accounts/LogoRosa.svg"/>
      </div>
      <div class="flex justify-center justify-self-end text-center w-3/5 h-full">
        <form id="login" method="post" class="w-full h-full flex flex-col items-start justify-center self-center">
          <div asp-validation-summary="ModelOnly" class=""></div>
          <div class="h-52 w-full flex flex-col justify-between items-start pl-10 mt-[26%]">
            <div class="relative w-7/12 mb-6">
              <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none p-2 pr-3">
                <img src="/images/Clients/Accounts/IconName.svg" class="h-4/5">
              </div>
              <input asp-fot="Input.FullName" type="text" id="name" class="bg-white shadow-2xl border border-transparent text-[#948F8F] text-sm rounded-2xl focus:ring-blue-500 focus:border-blue-500 block w-full ps-12 p-4" placeholder="Digite seu nome completo">
              <span asp-validation-for="Input.FullName" class="placeholder"></span>
            </div>

            <div class="relative w-7/12 mb-6">
              <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none p-2 pr-3">
                <img src="/images/Clients/Accounts/IconCPF.svg" class="h-4/5">
              </div>
              <input asp-fot="Input.CPF" type="text" id="cpf" class="bg-white shadow-2xl border border-transparent text-[#948F8F] text-sm rounded-2xl focus:ring-blue-500 focus:border-blue-500 block w-full ps-12 p-4" placeholder="Informe seu CPF">
              <span asp-validation-for="Input.CPF" class="placeholder"></span>
            </div>

            <div class="relative w-7/12">
              <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none p-2 pr-3">
                <img src="/images/Clients/Accounts/IconTEL.svg" class="h-4/5">
              </div>
              <input asp-fot="Input.Tel" type="text" id="tel" class="bg-white shadow-2xl border border-transparent text-[#948F8F]  text-sm rounded-2xl focus:ring-blue-500 focus:border-blue-500 block w-full ps-12 p-4" placeholder="Informe seu Telefone">
              <span asp-validation-for="Input.Tel" class="placeholder"></span>
            </div>

          </div>
          <div class="flex w-3/5 h-full justify-evenly items-end pb-5 self-end">
            <a href="/Clients/Accounts/Register" class="w-2/5"><button class="w-full py-5 rounded-xl hover:shadow-2xl text-xs xl:text-sm 2xl:text-md uppercase text-[#FF008A] bg-white border-2 border-solid border-[#FF008A]">Voltar</button></a>
            <a href="/Clients/Accounts/RegisterUser" class="w-2/5"><button id="login-submit" type="submit" class="w-full py-5 rounded-xl hover:shadow-2xl text-xs xl:text-sm 2xl:text-md uppercase text-white bg-[#FF008A]">Continuar</button></a>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
