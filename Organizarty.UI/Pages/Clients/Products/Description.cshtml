@page "{productId:Guid}"
@model DescriptionModel 
@using Organizarty.UI.Blazor.Components.Utils;
@{
    Layout = "_NullLayout";
    ViewData["Title"] = "Descrição do Produto";
}

<section class="w-screen h-screen">
    <div class="w-full h-full flex">
        <div class="w-1/3 flex flex-col justify-evenly">
            <div class="flex justify-center items-center w-full h-28">
                <img class="items-center w-32 " src="/images/Clients/Description/BakeryLogo.png"></img>
                <div class="ml-4">
                    <h1 class="text-[#FF08AA] font-[Inter] text-3xl"><strong>Pastry Shop</strong></h1>
                    <p class="text-[#848484] font-[Inter] text-xs">Ana Fernandez</p>
                </div>
            </div>
            <div class="rounded self-center">
                <img class="w-80" src="@Model.Food.Images[0]"/>
                <p class="mt-6 font-[Konnect] font- text-4xl text-[#848484]">R$ @Model.Food.Price</p>
                <div class="bg-[#FF008A] rounded-xl h-2 w-52"></div>
            </div>
        </div>
            <!-- Part 2 -->
        <div class="w-2/3 flex flex-col ml-10">
            <div class="w-full flex justify-end">
                <a href="/Clients/Products"><button><img class="w-12 mr-6 mt-6" src="/images/Clients/Description/Xis.svg"/></button></a>
            </div>
            <div class="w-fit self-start mt-24">
                <h1 class="font-[Inter] font-bold text-[#FF008A] text-5xl">@Model.Food.FoodType.Name - @Model.Food.Flavour</h1>
                <p class="text-[#848484]" font-[Konnect]>@Model.Food.FoodType.Category</p>
            </div>
            <div class="mt-4">
                <p class="text-[#848484] font-[Inter] text-lg w-11/12">@Model.Food.FoodType.Description</p>
            </div>

            <div class="">
                <form class="flex mt-16" method="post">
                    <div asp-validation-summary="ModelOnly" class=""></div>
                        <div class="flex flex-col gap-y-4 w-full">
                            <div class="flex">
                                <div class="w-1/2 mr-8">
                                    <h2 class="text-[#A09898] font-[Inter] font-bold">Nota do cliente</h2>
                                    <input asp-for="Input.Note" class="w-full h-12 rounded-2xl shadow-xl border-[#FF008A] form-control" aria-required="true" placeholder="Ex: Sem cobertura"/>
                                    <span asp-validation-for="Input.Note" class="placeholder"></span>
                                </div>
                                <div class="w-fit flex flex-col items-center">
                                    <h2 class="text-[#A09898] font-[Inter] font-bold">Qtd</h2>
                                    <input asp-for="Input.Quantity" type="number" min="0" class="w-12 h-12 rounded-2xl shadow-xl border-[#FF008A] form-control" aria-required="true"/>
                                    <span asp-validation-for="Input.Quantity" class="placeholder text-[#FF008A] font-[Inter]"></span>
                                </div>
                            </div>
                        <div class="flex">
                            <select id="large" asp-for="Input.PartyId"
                            class="block w-1/2 px-4 py-3 text-base text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                            <option selected>Selecione uma Festa</option>
                            @foreach(var party in Model.Parties){
                                <option value="@party.Id">@party.Name</option>
                            }
                            </select>
                            <span asp-validation-for="Input.PartyId" class="placeholder text-[#FF008A] font-[Inter]"></span>
                        </div>
                    <div class="w-full flex justify-evenly items-center mt-2">
                        <button class="justify-center mr-12 bg-[#FF008A] text-white font-[Inter] font-bold w-52 h-12 rounded-lg"><h2 class="flex items-center justify-center">Incluir na festa</h2></button>
                        <component type="typeof(ShowTags)" render-mode="ServerPrerendered" param-Tags="@Model.Food.FoodType.Tags" />
                    </div>
                    </div>
                </form>
            </div>
    </div>
</section>
