@page
@model ClientIndexModel 

@{
    Layout = "_NullLayout";
    ViewData["Title"] = "Home";
}

<partial name="_OrganizartyClientsLayout"/>
 <section class="flex flex-col h-screen ml-auto w-5/6">
    <div class="bg-[#D9D9D9] rounded-xl mt-8 w-5/6 pb-4 h-60 flex-col flex self-center">
        <div class="text-white self-center mt-6 text-3xl">
            <h2>Como planeja festejar hoje?</h2>
        </div>
        <div class="w-2/3 flex justify-center self-center mt-4">
            <input asp-for="Input.Search" class="w-6/12 h-6 rounded-xl shadow-xl placeholder form-control" aria-required="true" placeholder="Pesquisar Festa"/>
            <span asp-validation-for="Input.Search" class="placeholder"></span>
            <button class="bg-[#757272] rounded-full w-10 ml-2"><img class=" self-center ml-auto mr-auto" src="/images/Clients/Index/Lupa.svg"></img></button>
        </div>
        <div class="self-center flex mt-4">
            <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Urso.svg"></img></button>
            <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Coracao.svg"></img></button>
            <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Coroa.svg"></img></button>
            <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Coquetel.svg"></img></button>
            <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Bolo.svg"></img></button>   
        </div>
    </div>

    <div class="w-full h-3/4 flex-col flex justify-center items-center mt-[20%]">
        <img class="w-20" src="/images/Clients/Index/Zart.svg"></img>
        <h3>Poxa, você ainda não criou nenhuma festa...</h3>
    </div>
</section>
