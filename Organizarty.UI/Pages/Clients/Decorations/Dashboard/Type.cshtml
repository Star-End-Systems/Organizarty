@page "{DecorationCategory}"
@model TypeModel
@using Organizarty.Application.App.Decorations.Entities
@using Organizarty.UI.Blazor.Components.Decorations.Dashboard
@using Organizarty.UI.Extensions;
@{
    Layout = "_NullLayout";
    ViewData["Title"] = "Decorações";
}

<section class="w-screen h-screen bg-gradient-to-b from-[#F70192] to-[#FFC700] dark:from-[#36013f] dark:to-[#EE7600]  flex flex-col font-[Inter] items-center">
    <div class="w-full flex justify-between px-14 pt-10">
        <a href="/Clients/Decorations/Dashboard/Main" class="h-full">
            <img src="/images/Clients/Dashboard/IconVoltar.svg" class="h-full">
        </a>
        <a class="px-10 py-2 bg-white rounded-full">
            <button class="inline-flex text-xs xs:text-sm sm:text-md md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl text-[#848484] items-center gap-x-5">
                Adicionado
                <img src="/images/Clients/Dashboard/IconCarrinho.svg" class="h-5/6">
            </button>
        </a>
    </div>
    <div class="w-full flex flex-col text-white pl-[12%] gap-y-4">
        <h1 class="w-fit text-lg xs:text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl font-bold">
            @DecorationCategory.GetName()
            <hr class="w-1/5 border-4 border-solid border-white rounded-full">
        </h1>
        <h2 class="text-[0.5rem]/[0/75rem] xs:text-xs sm:text-sm md:text-base lg:text-lg xl:text-xl 2xl:text-2xl">
            Aqui você escolhe o formato desejado do arranjo de seus balões
        </h2>
        </div>
        <div class="bg-white rounded-3xl flex flex-col py-14 px-32 mt-14">
            <div class="grid row-2 gap-x-10 gap-y-20">
            </div>
        </div>
</section>