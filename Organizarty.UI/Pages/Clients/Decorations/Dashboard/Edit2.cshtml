@page
@* @model DescriptionModel *@
@{
    Layout = "_NullLayout";
    ViewData["Title"] = "Decorações";
}
    
<section class="w-screen h-screen">
    <div class="text-[#848484] font-[Inter] h-1/4 pt-12 pl-24">
        <h1 class="font-bold text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl w-fit">
            Escolha as cores
            <hr class="border-4 border-solid border-[#848484] w-1/4 rounded-full">
        </h1>
        <p classs="text-sm sm:text-md md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl">
            Aqui você seleciona as cores desejadas para os balões
        </p>
    </div>
    <div class="w-full h-3/4 flex">
        <img class="w-1/3 h-4/5 ml-32" src="/images/Clients/Dashboard/IconBalaoEstatico.svg">
        <form class="flex flex-col mt-16 w-1/2 gap-y-24" method="post">
            <div class="w-2/3 mr-12">
                <input class="w-full h-12 rounded-2xl shadow-xl form-control pl-4" aria-required="true" placeholder="Descrição"/>
                <span class="placeholder"></span>
            </div>
            <div class="w-2/3 flex flex-col items-center">
                <input type="number" min="1" class="w-full h-12 rounded-2xl border border-solid border-transparent shadow-xl form-control" aria-required="true" placeholder="Quantidade"/>
                <span class="placeholder"></span>
            </div>
            <div class="w-full flex justify-end mt-40">
                <button class="justify-center mr-12 bg-[#FF008A] text-white font-[Inter] font-bold w-52 h-16 rounded-full"><h2 class="flex items-center justify-center uppercase">Adicionar<h2></button>
            </div>
        </form>
    </div>
</section>