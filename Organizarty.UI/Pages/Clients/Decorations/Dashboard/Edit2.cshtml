@page "{decorationId:Guid}"
@model DescriptionModel
@using Organizarty.UI.Blazor.Components.Utils;

@{
    Layout = "_NullLayout";
    ViewData["Title"] = "Decorações";
}
    
<section class="w-screen h-screen">
    <div class="text-[#848484] font-[Inter] h-1/4 pt-12 pl-24">
        <h1 class="font-bold text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl w-fit">
            Escolha as cores
            <hr class="border-4 border-solid border-[#848484] w-1/4 rounded-full">
        </h1>
        <p classs="text-sm sm:text-md md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl">
            Aqui você seleciona as cores desejadas para os balões
        </p>
    </div>
    <div class="w-full h-3/4 flex">
        <img class="w-1/3 h-4/5 ml-32" src="@Model.Decoration.DecorationType.Model">
        <form class="flex flex-col mt-16 w-1/2" method="post">
        <div class="flex">
            <div class="w-2/3 mr-12">
                <h2 class="text-[#A09898] font-[Inter] font-bold">Nota do cliente</h2>
                <input asp-for="Input.Note" class="w-full h-12 rounded-2xl shadow-xl border-[#FF008A] form-control" aria-required="true" placeholder="Ex: Sem cobertura"/>
                <span asp-validation-for="Input.Note" class="placeholder"></span>
            </div>
            <div class="flex flex-col items-center">
                <h2 class="text-[#A09898] font-[Inter] font-bold">Qtd</h2>
                <input asp-for="Input.Quantity" type="number" min="1" class="w-12 h-12 rounded-2xl shadow-xl border-[#FF008A] form-control" aria-required="true"/>
                <span asp-validation-for="Input.Quantity" class="placeholder w-8"></span>
            </div>
        </div>
            <div class="w-2/3 flex flex-col items-center mt-8">
                <select id="large" asp-for="Input.PartyId"
                  class="block w-full px-4 py-3 text-base text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                  <option selected>Selecione uma Festa</option>
                  @foreach(var party in Model.Parties){
                    <option value="@party.Id">@party.Name</option>
                  }
                </select>
            </div>
            <div class="w-full flex justify-end mt-40">
                <button class="justify-center mr-12 bg-[#FF008A] text-white font-[Inter] font-bold w-52 h-16 rounded-full"><h2 class="flex items-center justify-center uppercase">Adicionar<h2></button>
            </div>
        </form>
    </div>
</section>