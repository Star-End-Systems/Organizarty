@page
@model IndexModel 
@{
    Layout = "_OrganizartyClientsLayout";
    ViewData["Title"] = "Home";
}

<section class="w-full flex-col flex">
    <div class="bg-[#D9D9D9] rounded-xl mt-8 w-5/6 pb-4 h-1/3 flex-col flex self-center">
        <div class="text-white self-center mt-6 text-3xl">
            <h2>Como planeja festejar hoje?</h2>
        </div>
        <div class="w-2/3 flex justify-center self-center mt-4">
            <input asp-for="Input.Search" class="w-6/12 h-6 rounded-xl shadow-xl placeholder form-control" aria-required="true" placeholder="Pesquisar Festa"/>
            <span asp-validation-for="Input.Search" class="placeholder"></span>
            <button class="bg-[#757272] rounded-full w-10 ml-2"><img class=" self-center ml-auto mr-auto" src="/images/Clients/Index/Lupa.svg"></img></button>
        </div>
        <div class="mt-auto self-center flex mb-1">
            <button class="flex rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Urso.svg"></img></button>
            <button class="flex rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Coracao.svg"></img></button>
            <button class="flex rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Coroa.svg"></img></button>
            <button class="flex rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Coquetel.svg"></img></button>
            <button class="flex rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto" src="/images/Clients/Index/Bolo.svg"></img></button>   
        </div>
    </div>

    <div class="w-5/6 h-3/4 flex self-center">
        <div class="mt-20">
            <h1>Suas Festas</h1>
        <div class="bg-[#A882B5] h-44 rounded-2xl w-80 flex">
            <div class="bg-black opacity-50 w-80 rounded-2xl"></div>
            <div class="flex">
                <div class="flex-col flex self-center z-10 absolute ml-4">
                    <h4>Chá de Fralda</h4>
                    <p>Chá de bebê <br> Data do Evento: 12/10/2023</p>
                </div>
                <div>
                    <img class=" w-48 z-0" src="/images/Clients/MyParties/Urso.png">
                    <img class="absolute w-72 z-20" src="/images/Clients/MyParties/Status.png">
                </div>
            </div>
        </div>
        <div class="">


        </div>
    </div>
</section>