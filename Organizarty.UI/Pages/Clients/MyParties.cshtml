@page
@model MyPartiesModel
@using Organizarty.UI.Blazor.Components.Party
@{
Layout = "_ClientLayout";
ViewData["Title"] = "Home";
}
<div class="bg-[#D9D9D9] rounded-xl mt-8 w-full pb-4 h-60 flex-col flex self-center">
  <div class="text-white self-center mt-6 text-3xl w-full flex justify-center items-center text-center">
    <h2>Como planeja festejar hoje?</h2>
  </div>

  <div class="w-2/3 flex justify-center self-center mt-4">
    <input asp-for="Input.Search" class="w-6/12 h-6 rounded-xl shadow-xl placeholder form-control" aria-required="true"
      placeholder="Pesquisar Festa" />
    <span asp-validation-for="Input.Search" class="placeholder"></span>
    <button class="bg-[#757272] rounded-full w-10 ml-2"><img class=" self-center ml-auto mr-auto"
        src="/images/Clients/Index/Lupa.svg"></img></button>
  </div>

  <div class="flex mt-4 overflow-x-auto w-full justify-center px-8">
    <div class="flex flex-col items-center Button font-[KonnectBold] text-[#908D8D]">
      <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto"
          src="/images/Clients/Index/Urso.svg"></img></button>
    </div>
    <div class="flex flex-col items-center Button font-[KonnectBold] text-[#908D8D]">
      <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto"
          src="/images/Clients/Index/Coracao.svg"></img></button>
    </div>
    <div class="flex flex-col items-center Button font-[KonnectBold] text-[#908D8D]">
      <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto"
          src="/images/Clients/Index/Coroa.svg"></img></button>
    </div>
    <div class="flex flex-col items-center Button font-[KonnectBold] text-[#908D8D]">
      <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto"
          src="/images/Clients/Index/Coquetel.svg"></img></button>
    </div>
    <div class="flex flex-col items-center Button font-[KonnectBold] text-[#908D8D]">
      <button class="flex menuButtons rounded-full w-12 h-12 mr-4 bg-white"><img class="w-6 self-center ml-auto mr-auto"
          src="/images/Clients/Index/Bolo.svg"></img></button>
    </div>
  </div>
</div>
<div class="w-full self-center mt-[1%]">
  <h1>Suas Festas</h1>
  <div class="flex overflow-x-auto w-full h-auto">
    @foreach(var schedule in Model.Schedules){
      <component type="typeof(PartyScheduleCard)" render-mode="ServerPrerendered" param-Schedule="@schedule" />
    }
  </div>
</div>
<div class="w-5/6 h-3/4 self-center mt-[1%]">
  <h1>Continue editando...</h1>
  <div class="flex overflow-x-auto w-full h-auto">
    @foreach(var party in Model.PartyTemplates){
      <a class="mr-8" href="/Clients/Party/Detail/@party.Id"> <component type="typeof(PartyEditCard)" render-mode="ServerPrerendered" param-PartyTemplate="@party" /> </a>
    }
    <a class="mr-8" href="/Clients/Party/New"> <component type="typeof(PartyEditCard)" render-mode="ServerPrerendered" /> </a>
  </div>
</div>

</section>
