@page
@model NewPartyModel
@{
ViewData["title"] = "Nova Festa";
Layout = "_NullLayout";
}

<section
  class="w-screen h-screen bg-gradient-to-b from-[#FF008A] via-[#BB00C7] to-[#008EDE] flex flex-col items-center">
  <a href="/Clients/CreateParty" class="self-start mt-10 ml-24"><img src="/images/Clients/Accounts/IconBack.svg"></a>
  <div
    class="h-[85%] w-[40%] bg-[#FFFFFF] bg-opacity-30 flex flex-col rounded-2xl shadow-2xl items-center font-[Inter] justify-self-center">
    <img src="/images/Clients/Accounts/Baloes.png" class="absolute left-[21%] top-[30%] h-[60%]">
    <img src="/images/Clients/Accounts/Baloes.png" class="absolute right-[19%] top-[15%] h-[60%]">
    <h1
      class="uppercase font-bold text-white xs:text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl mt-10">
      Nova Festa
    </h1>
    <p class="text-white text-xs lg:text-sm xl:text-md 2xl:text-lg break-words w-1/2 text-center mt-5">
      Precisamos somente de algumas informações para dar play nas suas festas
    </p>
    <form id="login" method="post" class="w-full h-full flex flex-col items-center justify-center">
      @Html.ValidationSummary(true, "", new { @class = "text-red-600 mb-8" })
      <div asp-validation-summary="ModelOnly" class=""></div>
      <div class="h-full w-full flex flex-col gap-y-5 items-center mt-5">

        <div class="relative w-9/12 flex flex-col gap-y-2">
          <input asp-for="Input.Name" type="text" id="name"
            class="bg-white shadow-2xl border border-transparent text-[#948F8F] text-sm rounded-2xl block w-full p-4"
            placeholder="Nome da festa">
              <span asp-validation-for="Input.Name" class="placeholder bg-red-900 text-center w-full text-white font-[Inter] rounded-xl"></span>
        </div>

        <div class="relative w-9/12 flex flex-col gap-y-2">
          <input asp-for="Input.Guests" type="number" id="tel"
            class="bg-white shadow-2xl border border-transparent text-[#948F8F] text-sm rounded-2xl block w-full p-4"
            placeholder="Número de convidados">
              <span asp-validation-for="Input.Guests" class="placeholder text-center gap-y-2 w-full bg-red-900 text-white font-[Inter] rounded-xl"></span>
        </div>

        <div class="relative w-9/12">
          <select asp-for="Input.PartyType" id="countries"
            class="block w-full px-4 py-3 text-base text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
            <option>Selecione um tipo de festa</option>
            <option value="0">Chá de bebe</option>
            <option value="1">Casamento</option>
            <option value="2">Aniversário</option>
            <option value="3">Debutante</option>
            <option value="4">Happy Hour</option>
          </select>
        </div>

        <div class="relative w-9/12">
          <select id="large" asp-for="Input.LocationId"
            class="block w-full px-4 py-3 text-base text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
            <option selected>Selecione uma localização</option>
            @foreach(var location in Model.Locations){
            <option value="@location.Id">@location.Name</option>
            }
          </select>
        </div>
      </div>
      <div class="flex w-3/5 h-full justify-end items-end pb-5 self-end">
        <button id="login-submit"
          class="w-2/5 py-5 rounded-xl font-bold text-xs xl:text-sm 2xl:text-md uppercase text-white inline-flex justify-center items-center">Criar
          festa</button>
      </div>
    </form>
  </div>
</section>
