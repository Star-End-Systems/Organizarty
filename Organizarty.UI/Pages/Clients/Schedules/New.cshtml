@page "{partyid:Guid}"
@model NewScheduleModel
<section
  class="w-screen h-screen bg-gradient-to-b from-[#FF008A] via-[#BB00C7] to-[#008EDE] flex flex-col items-center">
  <a href="/Clients/Accounts/NewParty" class="self-start mt-10 ml-24"><img
      src="/images/Clients/Accounts/IconBack.svg"></a>
  <div
    class="h-[85%] w-[40%] bg-[#FFFFFF] bg-opacity-30 flex flex-col rounded-2xl shadow-2xl items-center font-[Inter] justify-self-center">
    <img src="/images/Clients/Accounts/Baloes.png" class="absolute left-[21%] top-[30%] h-[60%]">
    <img src="/images/Clients/Accounts/Baloes.png" class="absolute right-[19%] top-[15%] h-[60%]">
    <h1
      class="uppercase font-bold text-white xs:text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl mt-10">
      Nova Festa
    </h1>
    <p class="text-white text-xs lg:text-sm xl:text-md 2xl:text-lg break-words w-1/2 text-center mt-5">
      Precisamos somente de algumas informações para dar play nas suas festas
    </p>
    <form id="login" method="post" class="w-full h-full flex flex-col items-center justify-center">
      @Html.ValidationSummary(true,  "", new { @class = "text-red-600 mb-8" })
      <div class="h-full w-full flex flex-col gap-y-10 items-center mt-[14%]">
        <input asp-for="Input.Date" type="datetime-local"
          class="border-2 border-gray-300 p-2 rounded-md shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
            <div class="relative w-9/12">
              <input asp-for="Input.Duration" type="number" id="cpf" class="bg-white shadow-2xl border border-transparent text-[#948F8F] text-sm rounded-2xl block w-full p-4" placeholder="Duração">
              <span asp-validation-for="Input.Duration" class="placeholder"></span>
            </div>
      <div class="flex w-3/5 h-full justify-end items-end pb-5 self-end">
        <button id="login-submit" type="submit"
          class="w-2/5 py-5 rounded-xl font-bold text-xs xl:text-sm 2xl:text-md uppercase text-white inline-flex justify-center items-center">
          Start
          <svg width="10" height="22" viewBox="0 0 20 32" fill="none" xmlns="http://www.w3.org/2000/svg" class="ml-3">
            <path d="M20 16L0.5 31.5885L0.5 0.411543L20 16Z" fill="#D9D9D9" />
          </svg>
        </button>
      </div>
    </form>
  </div>
</section>
