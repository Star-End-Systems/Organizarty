@page
@model CreateThirdPartyAccountModel
@{
Layout = "_NullLayout";
ViewData["Title"] = "Register" ;
}
<section class="flex h-screen font-[Inter] bg-[url('/images/ThirdParty/Accounts/BackgroundThirdParty.png')]">
  <div class="w-screen h-full flex flex-col items-center">
    <h2 class="text-[#B1B0B0] uppercase font-[Inter] font-bold text-lg xs:text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl mt-5">Registro</h2>
    <p class="text-[#908D8D] font-[Inter] text-xs md:text-xs lg:text-sm xl:text-md 2xl:text-lg mt-2 mb-10">Precisamos somente de algumas informações para dar play em suas vendass.</p>
    <div class="flex w-screen justify-center h-full">
      <div class="flex justify-end w-2/5 h-1/2 self-center pr-10">
        <img class="w-3/5 border-2 border-solid border-[#BB00C7] rounded-2xl shadow-2xl bg-white px-10 py-5" src="/images/ThirdParty/Accounts/LogoRoxa.svg"/>
      </div>
      <div class="flex justify-center justify-self-end text-center w-3/5 h-full">
        <form id="login" method="post" class="w-full h-full flex flex-col items-start justify-center self-center">
          <div asp-validation-summary="ModelOnly" class=""></div>
          <div class="h-52 w-full flex flex-col justify-between items-start pl-10 mt-[23%]">
            <div class="relative w-7/12 mb-6">
              <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none p-2 pr-3">
                <img src="/images/ThirdParty/Accounts/IconName.svg" class="h-4/5">
              </div>
              <input asp-fot="Input.FullName" type="text" id="name" class="bg-white shadow-2xl border border-transparent text-[#948F8F] text-sm rounded-2xl block w-full ps-12 p-4" placeholder="Digite seu nome e sobrenome">
              <span asp-validation-for="Input.FullName" class="placeholder"></span>
            </div>

            <div class="relative w-7/12 mb-6 flex">
              <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none p-2 pr-3">
                <img src="/images/ThirdParty/Accounts/IconLocation1.svg" class="h-4/5">
              </div>
              <input asp-fot="Input.Location" type="text" id="cpf" class="bg-white shadow-2xl border border-transparent text-[#948F8F] text-sm rounded-2xl block w-5/6 ps-12 p-4" placeholder="Digite o nome da sua loja e selecione a localização">
              <span asp-validation-for="Input.Location" class="placeholder"></span>
              <div class="w-1/12 bg-white shadow-2xl border border-transparent rounded-2xl flex justify-center items-center ml-10 px-4">
                <button clas="w-full h-full bg-transparent">
                  <img src="/images/ThirdParty/Accounts/IconLocation2.svg" class="h-3/5">
                </button>
              </div>
            </div>

            <div class="relative w-7/12 mb-6">
              <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none p-2 pr-3">
                <img src="/images/ThirdParty/Accounts/IconCNPJ.svg" class="h-4/5">
              </div>
              <input asp-fot="Input.CNPJ" type="text" id="tel" class="bg-white shadow-2xl border border-transparent text-[#948F8F]  text-sm rounded-2xl block w-full ps-12 p-4" placeholder="Digite o CNPJ da sua empresa">
              <span asp-validation-for="Input.CNPJ" class="placeholder"></span>
            </div>

            <div class="relative w-7/12">
              <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none p-2 pr-3">
                <img src="/images/ThirdParty/Accounts/IconTel.svg" class="h-4/5">
              </div>
              <input asp-fot="Input.Tel" type="text" id="tel" class="bg-white shadow-2xl border border-transparent text-[#948F8F]  text-sm rounded-2xl block w-full ps-12 p-4" placeholder="Digite seu telefone ou celular">
              <span asp-validation-for="Input.Tel" class="placeholder"></span>
            </div>

          </div>
          <div class="flex w-3/5 h-full justify-evenly items-end pb-5 self-end">
            <a href="/Clients/Accounts/Register" class="w-2/5"><button class="w-full py-5 rounded-xl hover:shadow-2xl text-xs xl:text-sm 2xl:text-md uppercase text-[#BB00C7] bg-white border-2 border-solid border-[#BB00C7]">Voltar</button></a>
            <a href="/Clients/Accounts/RegisterUser" class="w-2/5"><button id="login-submit" type="submit" class="w-full py-5 rounded-xl hover:shadow-2xl text-xs xl:text-sm 2xl:text-md uppercase text-white bg-[#BB00C7]">Continuar</button></a>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
