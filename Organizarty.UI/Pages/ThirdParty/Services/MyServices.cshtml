@page
@model MyServiceModel 

@using Organizarty.UI.Blazor.Components.Services

@{
    Layout = "_NullLayout";
    ViewData["Title"] = "Meus produtos";
}
<partial name="_OrganizartyThirdPartyLayout"/>
<section class="ml-auto w-5/6">
    <div clas="flex flex-col">
        <div class="mt-4">
            <div class="flex justify-start items-center w-fit h-28 ml-20">
                <img class="items-center w-24 " src="/images/ThirdParty/MyServices/LogoJunior.png"></img>
                <div class="ml-4">
                    <h1 class="text-[#BB00C7] font-[Inter] text-3xl"><strong>Fotografias Junior</strong></h1>
                    <p class="text-[#848484] font-[Inter] text-xs">Júnior Gonçalves</p>
                </div>
            </div>
        </div>
        <div class="">
            <h1 class="font-[Inter] font-bold text-[#848484] text-md ml-20 mt-10">Seus Serviços</h1>
        </div>
        <div class="flex ml-20 mt-4">
            <div class="w-fit flex flex-col items-center Button font-[KonnectBold] text-[#908D8D] mr-4"><button class="flex menuButtons rounded-full w-28 h-28  bg-[#424242]"><img class="w-14 self-center ml-auto mr-auto" src="/images/ThirdParty/MyServices/Camera.svg"></img></button><h4 class="text-sm">Fotógrafo</h4></div>
            <a href="./New"><div class="w-fit flex flex-col items-center Button font-[KonnectBold] text-[#908D8D] mr-4"><button class="flex menuButtons rounded-full w-28 h-28  hover:bg-[#D9D9D9]"><img class="w-10 self-center ml-auto mr-auto" src="/images/ThirdParty/MyProducts/Cruz.png"></img></button><h4 class="text-sm">Adicionar</h4></div></a>
        </div>
        <div class="ml-20">
              @foreach (var service in @Model.Services){
                <div class="mt-6">
                    <h1 class="flex font-[KonnectBold] text-[#A09898] text-4xl mb-2">@service.Name <a href="/ThirdParty/Services/NewSubitem/@service.Id">+</a></h1>
                </div>
                <div class="flex">
                  @foreach (var item in service.SubServices){
                    <component type="typeof(ThirdPartyServiceCard)" render-mode="ServerPrerendered" param-Service="@item" />
                  }
                  
                </div>
              }
        </div>
    </div>
</section>
