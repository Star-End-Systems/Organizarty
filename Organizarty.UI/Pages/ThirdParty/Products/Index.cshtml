@page
@model IndexModel
@using Organizarty.UI.Blazor.Components.Products;

@{
Layout = "_ThirdPartyLayout";
ViewData["Title"] = "Meus produtos";
}

<section class="w-4/5 ml-[20%] flex flex-col overflow-x-hidden">
<div class="mt-4 overflow-x-hidden">
  <div class="flex justify-start items-center w-fit h-28 overflow-x-hidden">
    <img class="items-center w-24 " src="/images/Clients/Description/BakeryLogo.png"></img>
    <div class="ml-4 overflow-x-hidden">
      <h1 class="text-[#BB00C7] font-[Inter] text-3xl uppercase"><strong>@Model.ThirdParty.Name</strong></h1>
      <p class="text-[#848484] font-[Inter] text-xs">@Model.ThirdParty.Address</p>
    </div>
  </div>
</div>

<div class="overflow-x-hidden">
  <h2 class="font-[Inter] font-bold text-[#848484] text-2xl mt-10 ">Seus Produtos</h2>
</div>

<div class="flex w-full p-2 overflow-x-hidden mt-4 gap-x-4">
  <a href="/ThirdParty/products/ChooseNewProductType" class="w-fit flex flex-col items-center Button font-[KonnectBold] text-[#908D8D]">
    <button class="flex menuButtons rounded-full w-28 h-28 hover:bg-[#D9D9D9]">
      <img class="w-10 self-center ml-auto mr-auto" src="/images/ThirdParty/MyProducts/cruz.png"/>
    </button>
    <h4 class="text-sm">Adicionar</h4>
  </a>
</div>

@foreach(var food in Model.Foods){
<div class="w-full">
  <div class="mt-6">
    <h1 class="inline-flex gap-x-10 font-[KonnectBold] text-[#A09898] text-4xl mb-2">
      @food.Name
      <a href="/ThirdParty/Products/NewSubItem/@food.Id">
        <img class="w-8 h-8" src="/images/icons/mais.png"/>
      </a>
      <a href="/ThirdParty/Products/Edit/@food.Id">
        <img src="/images/Manager/Decorations/Edit.svg" class="h-8"/>
      </a>
    </h1>
  </div>
  <div class="w-full overflow-x-auto flex">
    @foreach (var item in food.Foods){
    <component type="typeof(ThirdPartyProductCard)" render-mode="ServerPrerendered" param-Food="@item" />
    }
  </div>
</div>
}
</section>